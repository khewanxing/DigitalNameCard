<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DigitalNameCard2"
             x:Class="DigitalNameCard2.MainPage">

    <StackLayout >
        <Button x:Name="myButton" Clicked="myButton_Clicked" HeightRequest="100" Text="myButton"></Button>
        <Image x:Name="background" Aspect="AspectFill" IsVisible="False" >
          
        </Image>
        <Grid x:Name="root" IsVisible="False" >
            <Grid.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImageTapped"/>
            </Grid.GestureRecognizers>
        </Grid>
    </StackLayout>

</ContentPage>
