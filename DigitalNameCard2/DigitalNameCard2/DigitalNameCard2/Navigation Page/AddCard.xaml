<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigitalNameCard2.Navigation_Page.AddCard">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition  Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Image x:Name="imgScan"></Image>
                <Button x:Name="btnScan" Text="Scan"></Button>
            </StackLayout>
            <StackLayout Grid.Row="1">
                <Image x:Name="imgQR"></Image>
                <Label x:Name="Scan this QR to add"></Label>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>