<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             x:Class="DigitalNameCard2.Navigation_Page.AddCard"
             >
             
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition  Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
               
                <Image x:Name="imgScan"></Image>
                <Button x:Name="btnScan" Text="Scan" Clicked="btnScan_Clicked"></Button>
            </StackLayout>
            <StackLayout Grid.Row="1">
                <forms:ZXingBarcodeImageView x:Name="imgQR" BarcodeFormat="QR_CODE" WidthRequest="256" HeightRequest="256">
                </forms:ZXingBarcodeImageView>
                <Label x:Name="lblScan" Text=""></Label>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>