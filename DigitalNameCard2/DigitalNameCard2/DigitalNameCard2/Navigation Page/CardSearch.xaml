<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigitalNameCard2.Navigation_Page.CardSearch">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="8*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="6*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Text="Search : " Grid.Column="0" Margin="2,2,2,2" FontSize="Medium"></Label>
                <Entry Placeholder="Enter Search Query" Grid.Column="1"></Entry>
                <Button Image="icon.png" Grid.Column="2" Text="Search"></Button>
            </Grid>
            <StackLayout x:Name="root">
                
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>